#
# Module variables
#
# * Shared internal variables for module tasks
#

# shellcheck disable=SC2154
{
  # Env / GoSEc / Module environment definition version
  export DEV_ENV_GOSEC_ID='gosec'
  export DEV_ENV_GOSEC_VERSION='1.0.0'
  # Env / GoSEc / Log path
  export DEV_ENV_GOSEC_PATH_LOGS="${DEV_PATH_LOGS}/gs"

  # Lib / GoSEc / Installer
  export DEV_LIB_GOSEC_INSTALLER="${DEV_LIB_INSTALLER64_TARGET}/install-gosec"
  # Lib / GoSEc / Skip installation?
  export DEV_LIB_GOSEC_SKIP='YES'
  # Lib / GoSEc / Target
  export DEV_LIB_GOSEC_TARGET="${DEV_PATH_LIB}/${DEV_ENV_GOSEC_ID}"
}

#
# Module parameters
#
# * Use .dev.env file to override values
#

# shellcheck disable=SC2154
{
  # SAST / GoSEc / Target
  export DEV_SAST_GOSEC_TARGET="${DEV_SAST_GOSEC_TARGET:-${DEV_PATH_SRC}}"
  # SAST / GoSEc / Format
  export DEV_SAST_GOSEC_FORMAT="${DEV_SAST_GOSEC_FORMAT:-sarif}"
  # SAST / GoSEc / Report
  export DEV_SAST_GOSEC_PATH_REPORT="${DEV_ENV_GOSEC_PATH_LOGS}/gosec.${DEV_SAST_GOSEC_FORMAT}"
}

#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  # Lib / GoSEc / Command
  export DEV_LIB_GOSEC_BIN="${DEV_LIB_GOSEC_BIN:-}"
  if [[ -z "$DEV_LIB_GOSEC_BIN" ]]; then
    DEV_LIB_GOSEC_BIN="$(bl64_bsh_command_locate_user 'gosec')"
    if [[ -z "$DEV_LIB_GOSEC_BIN" ]]; then
      DEV_LIB_GOSEC_BIN="${DEV_LIB_GOSEC_TARGET}/gosec"
      if [[ ! -x "${DEV_LIB_GOSEC_BIN}" ]]; then
        DEV_LIB_GOSEC_SKIP='NO'
      fi
    else
      DEV_LIB_GOSEC_TARGET="$(bl64_fmt_path_get_basename "$DEV_LIB_GOSEC_BIN")"
    fi
  fi
}
