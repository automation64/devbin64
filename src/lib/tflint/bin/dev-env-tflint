#
# Globals
#
# * Use .env file to override values
#

# shellcheck disable=SC2154
{
  # Lib / TFLint / Installer
  export DEV_LIB_TFLINT_INSTALLER="${DEV_LIB_INSTALLER64_TARGET}/install-tflint"
  # Lib / TFLint / Target
  export DEV_LIB_TFLINT_TARGET="${DEV_LIB_TFLINT_TARGET:-${DEV_PATH_LIB}/tfl}"
  # Lint / TFLint / Target
  export DEV_LINT_TFLINT_TARGET="${DEV_LINT_TFLINT_TARGET:-${DEV_PATH_SRC}}"
  # Lint / TFLint / Format
  export DEV_LINT_TFLINT_FORMAT="${DEV_LINT_TFLINT_FORMAT:-sarif}"
}

#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  # Lib / TFLint / Command
  export DEV_LIB_TFLINT_BIN="${DEV_LIB_TFLINT_BIN:-${DEV_LIB_TFLINT_TARGET}/tflint}"
}

#
# Secrets
#
# * Use .secrets.env file or CICD secrets to override values
#
