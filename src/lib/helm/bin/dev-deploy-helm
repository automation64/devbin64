# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=/opt/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-hlm.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-xsv.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-bsh.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1
# shellcheck source-path=bin
source ./bin/dev-env-kubectl &&
  source ./bin/dev-env-helm || exit 1

declare MY_CHART="${1:-}"
declare MY_NAMESPACE="${2:-}"
declare MY_REPOSITORY_NAME="${3:-}"
declare MY_REPOSITORY_URL="${4:-$BL64_VAR_DEFAULT}"
declare MY_VALUES_FILE_ETC="${5:-$BL64_VAR_DEFAULT}"
declare MY_VALUES_FILE_SRC="${6:-$BL64_VAR_DEFAULT}"

function my_deploy() {
  bl64_dbg_app_show_function

  if ! bl64_lib_var_is_default "$MY_REPOSITORY_URL"; then
    bl64_hlm_run_helm \
      repo \
      add \
      --force-update \
      "$MY_REPOSITORY_NAME" \
      "$MY_REPOSITORY_URL"
  fi

  bl64_hlm_chart_upgrade \
    "$BL64_VAR_DEFAULT" \
    "$MY_NAMESPACE" \
    "${MY_CHART}" \
    "${MY_REPOSITORY_NAME}/${MY_CHART}" \
    ${MY_VALUES_FILE_ETC:+--values "$MY_VALUES_FILE_ETC"} \
    ${MY_VALUES_FILE_SRC:+--values "$MY_VALUES_FILE_SRC"}
}

function my_initialize() {
  bl64_dbg_app_show_function
  bl64_msg_show_about
  bl64_lib_var_is_default "$MY_VALUES_FILE_ETC" && MY_VALUES_FILE_ETC=''
  bl64_lib_var_is_default "$MY_VALUES_FILE_SRC" && MY_VALUES_FILE_SRC=''
  bl64_lib_script_minver_check '22.5.0' &&
    bl64_hlm_setup "$(bl64_fmt_path_get_dirname "$DEV_LIB_HELM_BIN")" &&
    bl64_check_parameter 'MY_CHART' &&
    bl64_check_parameter 'MY_NAMESPACE' &&
    bl64_check_parameter 'MY_REPOSITORY_NAME' &&
    bl64_msg_show_setup "$BL64_VAR_DEFAULT" \
      'MY_CHART' \
      'MY_NAMESPACE' \
      'MY_REPOSITORY_NAME' \
      'MY_REPOSITORY_URL' \
      'MY_VALUES_FILE_ETC' \
      'MY_VALUES_FILE_SRC'
}

bl64_lib_script_version_set '1.0.0'
bl64_msg_help_about_set 'Deploy Helm chart'
bl64_msg_set_format "$DEV_VERBOSE" && bl64_msg_all_enable_verbose && bl64_dbg_set_level "$DEV_CICD_DEBUG" && my_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_deploy
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
