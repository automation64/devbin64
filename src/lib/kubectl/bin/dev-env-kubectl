#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  # Lib / KubeCtl / Skip installation?
  export DEV_LIB_KUBECTL_SKIP='YES'
  # Lib / KubeCtl / Target
  export DEV_LIB_KUBECTL_TARGET="${DEV_PATH_LIB}/kst"
  # Lib / KubeCtl / Command
  export DEV_LIB_KUBECTL_BIN="${DEV_LIB_KUBECTL_BIN:-}"
  if [[ -z "$DEV_LIB_KUBECTL_BIN" ]]; then
    DEV_LIB_KUBECTL_BIN="$(bl64_bsh_command_locate_user 'kubectl')"
    if [[ -z "$DEV_LIB_KUBECTL_BIN" ]]; then
      DEV_LIB_KUBECTL_BIN="${DEV_LIB_KUBECTL_TARGET}/kubectl"
      if [[ ! -x "${DEV_LIB_KUBECTL_BIN}" ]]; then
        DEV_LIB_KUBECTL_SKIP='NO'
      fi
    fi
  fi
}

#
# Internal variables
#
# * Shared internal variables for module tasks
#

# shellcheck disable=SC2154
{
  # Env / KubeCtl / Module environment definition version
  export DEV_ENV_KUBECTL_VERSION='1.0.0'
  # Lib / KubeCtl / Installer
  export DEV_LIB_KUBECTL_INSTALLER="${DEV_LIB_INSTALLER64_TARGET}/install-kubectl"
}
