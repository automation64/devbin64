# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=bin
source ./bin/dev-env-gitops &&
  source ./bin/dev-env-opentofu || exit 1

# shellcheck source-path=lib/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1

declare MY_MODULE="${1:-}"
declare MY_VERSION="${2:-}"
declare MY_STAGING=''
declare MY_LOGS=''

function my_prepare() {
  bl64_dbg_app_show_function

  bl64_msg_show_task 'Prepare log store'
  bl64_fs_path_remove "$MY_LOGS"
  bl64_fs_dir_create \
    "$BL64_VAR_DEFAULT" "$BL64_VAR_DEFAULT" "$BL64_VAR_DEFAULT" \
    "$MY_LOGS" ||
    return $?

  if [[ -d "$DEV_TEST_OPENTOFU_CASES_TEST" ]]; then
    bl64_msg_show_task 'Prepare test cases'
    bl64_fs_path_merge \
      "$DEV_TEST_OPENTOFU_CASES_TEST" \
      "$MY_STAGING"
  fi
}

function my_test() {
  bl64_dbg_app_show_function
  bl64_msg_show_task 'Run test phase'
  cd "$MY_STAGING" &&
    "$DEV_LIB_OPENTOFU_BIN" \
      init \
      -input=false &&
    "$DEV_LIB_OPENTOFU_BIN" \
      test
}

function my_initialize() {
  bl64_dbg_app_show_function
  bl64_msg_show_about
  if [[ "$DEV_ENV_GITOPS_ENABLED" == 'YES' ]]; then
    db64_profile_check_set &&
      bl64_check_parameter 'MY_MODULE' &&
      bl64_check_parameter 'MY_VERSION' ||
      return $?
    MY_STAGING="${DEV_PATH_PROF_BUILD_STAGING}/${DEV_ENV_GITOPS_TAG_OPENTOFU}/${MY_MODULE}/${MY_VERSION}"
    MY_LOGS="${DEV_PATH_PROF_LOGS}/${DEV_ENV_GITOPS_TAG_OPENTOFU}/${MY_MODULE}/${MY_VERSION}"
  else
    MY_STAGING="${DEV_BUILD_OPENTOFU_STAGING}"
    MY_LOGS="${DEV_TEST_OPENTOFU_LOGS}"
  fi
  TF_LOG_PATH="${MY_LOGS}/${DEV_TEST_OPENTOFU_LOG}"

  bl64_check_command "$DEV_LIB_OPENTOFU_BIN" &&
    bl64_check_directory "$MY_STAGING" &&
    bl64_msg_show_setup "$BL64_VAR_DEFAULT" \
      'DEV_ENV_GITOPS_ENABLED' \
      'DEV_PROFILE' \
      'MY_MODULE' \
      'MY_VERSION' \
      'DEV_TEST_OPENTOFU_CASES_TEST' \
      'MY_STAGING' \
      'MY_LOGS'
}

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable
bl64_lib_script_version_set '1.1.0'
bl64_msg_help_about_set 'Test source code: tofu test'
bl64_msg_all_enable_verbose && my_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_prepare &&
  my_test
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
