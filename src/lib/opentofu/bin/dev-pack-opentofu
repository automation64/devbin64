# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=bin
source ./bin/dev-env-gitops &&
  source ./bin/dev-env-opentofu || exit 1
# shellcheck source-path=lib/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1

function my_pack() {
  bl64_dbg_app_show_function

  bl64_lib_flag_is_enabled "$DEV_ENV_GITOPS_ENABLED" &&
    bl64_msg_show_error 'task not supported for GitOps64 repositories (DEV_ENV_GITOPS_ENABLED)' &&
    return $BL64_LIB_ERROR_TASK_REQUIREMENTS

  ! bl64_lib_flag_is_enabled "$DEV_ENV_OPENTOFU_EXPORT_ENABLED" &&
    bl64_msg_show_error 'module export is disabled (DEV_ENV_OPENTOFU_EXPORT_ENABLED)' &&
    return $BL64_LIB_ERROR_TASK_REQUIREMENTS

  bl64_msg_show_task 'Remove previous module version from the repository root'
  bl64_fs_file_remove ./*.tofu

  bl64_msg_show_task 'Promote new module version to the repository root'
  bl64_fs_path_merge \
    "$DEV_PATH_SRC" \
    "$DEV_PATH_ROOT"
}

function my_initialize() {
  bl64_dbg_app_show_function
  bl64_msg_show_about
  bl64_check_file "${DEV_PATH_ROOT}/README.md" 'terraform registry modules are required to have a README.md file' &&
    bl64_check_file "${DEV_PATH_ROOT}/LICENSE" 'terraform registry modules are required to have a LICENSE file'
}

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable
bl64_lib_script_version_set '1.0.1'
bl64_msg_help_about_set 'Prepare module for export'
bl64_msg_all_enable_verbose && my_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_pack
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
