#
# Globals
#
# * Use .dev.env file to override values
#

# shellcheck disable=SC2154
{
  # Env / TFSec / Module environment definition version
  export DEV_ENV_TFSEC_VERSION='1.2.0'
  # Lib / TFSec / Installer
  export DEV_LIB_TFSEC_INSTALLER="${DEV_LIB_INSTALLER64_TARGET}/install-tfsec"
  # Lib / TFSec / Target
  export DEV_LIB_TFSEC_TARGET="${DEV_LIB_TFSEC_TARGET:-${DEV_PATH_LIB}/tfs}"
  # SAST /TFSec / Target
  export DEV_SAST_TFSEC_TARGET="${DEV_SAST_TFSEC_TARGET:-${DEV_PATH_SRC}}"
  # SAST /TFSec / Output format
  export DEV_SAST_TFSEC_FORMAT="${DEV_SAST_TFSEC_FORMAT:-lovely}"
  # SAST /TFSec / Configuration
  export DEV_SAST_TFSEC_CONFIG="${DEV_PATH_ROOT}/.tfsec.yml"
}

#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  # Lib / TFSec / Skip installation?
  export DEV_LIB_TFSEC_SKIP='YES'
  # Lib / TFSec / Command
  export DEV_LIB_TFSEC_BIN="${DEV_LIB_TFSEC_BIN:-}"
  if [[ -z "$DEV_LIB_TFSEC_BIN" ]]; then
    DEV_LIB_TFSEC_BIN="$(bl64_bsh_command_locate_user 'tfsec')"
    if [[ -z "$DEV_LIB_TFSEC_BIN" ]]; then
      DEV_LIB_TFSEC_BIN="${DEV_LIB_TFSEC_TARGET}/tfsec"
      DEV_LIB_TFSEC_SKIP='NO'
    fi
  fi
}
