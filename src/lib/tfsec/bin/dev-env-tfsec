#
# Globals
#
# * Use .env file to override values
#

# shellcheck disable=SC2154
{
  # Lib / TFSec / Installer
  export DEV_LIB_TFSEC_INSTALLER="${DEV_LIB_INSTALLER64_TARGET}/install-tfsec"
  # Lib / TFSec / Target
  export DEV_LIB_TFSEC_TARGET="${DEV_LIB_TFSEC_TARGET:-${DEV_PATH_LIB}/tfs}"
  # SAST /TFSec / Target
  export DEV_SAST_TFSEC_TARGET="${DEV_SAST_TFSEC_TARGET:-${DEV_PATH_SRC}}"
  # SAST /TFSec / Output format
  export DEV_SAST_TFSEC_FORMAT="${DEV_SAST_TFSEC_FORMAT:-sarif}"
}

#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  # Lib / TFSec / Command
  export DEV_LIB_TFSEC_BIN="${DEV_LIB_TFSEC_BIN:-${DEV_LIB_TFSEC_TARGET}/tfsec}"
}

#
# Secrets
#
# * Use .secrets.env file or CICD secrets to override values
#
