# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=/opt/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-cnt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-xsv.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-bsh.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1
# shellcheck source-path=bin
source ./bin/dev-env-go || exit 1

declare MY_TARGET="${*:-$DEV_TEST_GO_CASES}"

function dev_test_run() {
  bl64_dbg_app_show_function "$@"
  local image="$1"
  local target="$2"
  local entrypoint='/usr/local/bin/go'

  bl64_msg_show_phase "run test target: ${target}"
  # shellcheck disable=SC2086
  bl64_cnt_run \
    $BL64_CNT_SET_RM \
    $BL64_CNT_SET_TTY \
    --network=host \
    --workdir="$DEV_ENV_GO_CONTAINER_PATH_ROOT" \
    --mount "type=bind,source=${DEV_PATH_SRC},target=${DEV_ENV_GO_CONTAINER_PATH_SRC},readonly" \
    --mount "type=bind,source=${DEV_PATH_ROOT},target=${DEV_ENV_GO_CONTAINER_PATH_ROOT},readonly" \
    --mount "type=bind,source=${DEV_PATH_TEST},target=${DEV_ENV_GO_CONTAINER_PATH_TEST},readonly" \
    --entrypoint="$entrypoint" \
    "${DEV_ENV_GO_REGISTRY}/${image}" \
    -- \
    test \
    -v \
    "./${target}/..." ||
    return $?
}

function my_test() {
  bl64_dbg_app_show_function
  local current=''

  for current in ${MY_TARGET[*]}; do
    dev_test_run "${DEV_LAB_GO_CONTAINER}" "$current" ||
      return $?
  done
}

function my_initialize() {
  bl64_dbg_app_show_function
  bl64_msg_show_about
  bl64_cnt_setup &&
    bl64_check_command "$DEV_LIB_GO_BIN" &&
    dev_bin64_tmp_setup "$DEV_BUILD_GO_PATH_CACHE" "$DEV_BUILD_GO_PATH_MODCACHE" "$DEV_BUILD_GO_PATH_TMP" &&
    dev_bin64_task_show_setup \
      'MY_TARGET'
}

bl64_lib_script_version_set '2.0.0'
bl64_msg_help_about_set 'Test source code'
dev_bin64_initialize && my_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_test
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
