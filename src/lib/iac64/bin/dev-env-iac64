#
# Globals
#
# * Use .env file to override values
#

# shellcheck disable=SC2154
{
  # Env / IaC64 / Module environment definition version
  export DEV_ENV_IAC64_VERSION='2.1.0'
  # Env / IaC64 / Resource Tags
  export DEV_ENV_IAC64_TAG_ANSIBLE='ans'
  export DEV_ENV_IAC64_TAG_BASH='bsh'
  export DEV_ENV_IAC64_TAG_HELM='hlm'
  export DEV_ENV_IAC64_TAG_KUSTOMIZE='kst'
  export DEV_ENV_IAC64_TAG_OPENTOFU='otf'
  export DEV_ENV_IAC64_TAG_SHELL='sh'
  export DEV_ENV_IAC64_TAG_TERRAFORM='tf'

  # Lib / IaC64 / Drivers
  export DEV_LIB_IAC64_DRV_ANSIBLE_DEPLOY="${DEV_PATH_BIN}/dev-deploy-ansible"
  export DEV_LIB_IAC64_DRV_BASH_DEPLOY="${DEV_PATH_BIN}/dev-deploy-bash"
  export DEV_LIB_IAC64_DRV_KUSTOMIZE_DEPLOY="${DEV_PATH_BIN}/dev-deploy-kustomize"
  export DEV_LIB_IAC64_DRV_OPENTOFU_BUILD="${DEV_PATH_BIN}/dev-build-opentofu"
  export DEV_LIB_IAC64_DRV_OPENTOFU_DEPLOY="${DEV_PATH_BIN}/dev-deploy-opentofu"
  export DEV_LIB_IAC64_DRV_OPENTOFU_LIB="${DEV_PATH_BIN}/dev-lib-opentofu"
  export DEV_LIB_IAC64_DRV_OPENTOFU_REMOVE="${DEV_PATH_BIN}/dev-remove-opentofu"
  export DEV_LIB_IAC64_DRV_OPENTOFU_TEST_PLAN="${DEV_PATH_BIN}/dev-test-opentofu-plan"
  export DEV_LIB_IAC64_DRV_OPENTOFU_TEST_TEST="${DEV_PATH_BIN}/dev-test-opentofu-test"

  # Lib / IaC64 / Tools
  export DEV_LIB_IAC64_TOOL_TFLINT_LIB="${DEV_PATH_BIN}/dev-lib-tflint"
  export DEV_LIB_IAC64_TOOL_TFLINT_LINT="${DEV_PATH_BIN}/dev-lint-tflint"
  export DEV_LIB_IAC64_TOOL_TFSEC_LIB="${DEV_PATH_BIN}/dev-lib-tfsec"
  export DEV_LIB_IAC64_TOOL_TFSEC_SAST="${DEV_PATH_BIN}/dev-sast-tfsec"

  # Build / IaC64 / Source module
  export DEV_BUILD_IAC64_MODULE="${DEV_BUILD_IAC64_MODULE:-main}"
  export DEV_BUILD_IAC64_VERSION="${DEV_BUILD_IAC64_VERSION:-1.0.0}"

  # Deploy / IaC64 / Enable guardrail to prevent unintended deployment
  export DEV_DEPLOY_IAC64_GUARDRAIL_ENABLED="${DEV_DEPLOY_IAC64_GUARDRAIL_ENABLED:-YES}"

  # Remove / IaC64 / Enable guardrail to prevent unintended removal
  export DEV_REMOVE_IAC64_GUARDRAIL_ENABLED="${DEV_REMOVE_IAC64_GUARDRAIL_ENABLED:-YES}"
}

