#
# Module variables
#
# * Shared internal variables for module tasks
#

# shellcheck disable=SC2154
{
  # Env / IaC64 / Module environment definition version
  export DEV_ENV_IAC64_ID='iac64'
  export DEV_ENV_IAC64_VERSION='3.2.0'

  # Env / IaC64 / Driver Name
  export DEV_ENV_IAC64_DRIVER_NAME_ANSIBLE='ansible'
  export DEV_ENV_IAC64_DRIVER_NAME_BASH='bash'
  export DEV_ENV_IAC64_DRIVER_NAME_HELM='helm'
  export DEV_ENV_IAC64_DRIVER_NAME_KUSTOMIZE='kustomize'
  export DEV_ENV_IAC64_DRIVER_NAME_OPENTOFU='opentofu'

  # Env / IaC64 / Resource Tags
  export DEV_ENV_IAC64_DRIVER_TAG_GLOBAL='global'
  export DEV_ENV_IAC64_DRIVER_TAG_ANSIBLE='ans'
  export DEV_ENV_IAC64_DRIVER_TAG_BASH='bsh'
  export DEV_ENV_IAC64_DRIVER_TAG_HELM='hlm'
  export DEV_ENV_IAC64_DRIVER_TAG_KUSTOMIZE='kst'
  export DEV_ENV_IAC64_DRIVER_TAG_OPENTOFU='otf'
  export DEV_ENV_IAC64_DRIVER_TAG_SHELL='sh'
  export DEV_ENV_IAC64_DRIVER_TAG_TERRAFORM='tf'

  # Lib / IaC64 / Drivers
  export DEV_LIB_IAC64_HELPER_BUILD_OPENTOFU="${DEV_PATH_BIN}/dev-build-opentofu"
  export DEV_LIB_IAC64_HELPER_DEPLOY_ANSIBLE="${DEV_PATH_BIN}/dev-deploy-ansible"
  export DEV_LIB_IAC64_HELPER_DEPLOY_BASH="${DEV_PATH_BIN}/dev-deploy-bash"
  export DEV_LIB_IAC64_HELPER_DEPLOY_HELM="${DEV_PATH_BIN}/dev-deploy-helm"
  export DEV_LIB_IAC64_HELPER_DEPLOY_KUSTOMIZE="${DEV_PATH_BIN}/dev-deploy-kustomize"
  export DEV_LIB_IAC64_HELPER_DEPLOY_OPENTOFU="${DEV_PATH_BIN}/dev-deploy-opentofu"
  export DEV_LIB_IAC64_HELPER_REMOVE_BASH="${DEV_PATH_BIN}/dev-remove-bash"
  export DEV_LIB_IAC64_HELPER_REMOVE_HELM="${DEV_PATH_BIN}/dev-remove-helm"
  export DEV_LIB_IAC64_HELPER_REMOVE_KUSTOMIZE="${DEV_PATH_BIN}/dev-remove-kustomize"
  export DEV_LIB_IAC64_HELPER_REMOVE_OPENTOFU="${DEV_PATH_BIN}/dev-remove-opentofu"
  export DEV_LIB_IAC64_HELPER_TEST_ANSIBLE="${DEV_PATH_BIN}/dev-test-ansible"
  export DEV_LIB_IAC64_HELPER_TEST_KUSTOMIZE="${DEV_PATH_BIN}/dev-test-kustomize"
  export DEV_LIB_IAC64_HELPER_TEST_OPENTOFU="${DEV_PATH_BIN}/dev-test-opentofu"

  # Lib / IaC64 / Tools
  export DEV_LIB_IAC64_TOOL_LIB_ANSIBLE="${DEV_PATH_BIN}/dev-lib-ansible"
  export DEV_LIB_IAC64_TOOL_LIB_HELM="${DEV_PATH_BIN}/dev-lib-helm"
  export DEV_LIB_IAC64_TOOL_LIB_KUBELINTER="${DEV_PATH_BIN}/dev-lib-kubelinter"
  export DEV_LIB_IAC64_TOOL_LIB_KUBESCAPE="${DEV_PATH_BIN}/dev-lib-kubescape"
