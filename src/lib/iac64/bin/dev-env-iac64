  export DEV_ENV_IAC64_MODULE_SHARED="${DEV_ENV_IAC64_MODULE_SHARED:-}"
}

#
# Module parameters
#
# * Use .dev.env file to override values
#

# shellcheck disable=SC2154
{

  # Build / IaC64 / Source module
  export DEV_BUILD_IAC64_MODULE="${DEV_BUILD_IAC64_MODULE:-main}"
  export DEV_BUILD_IAC64_VERSION="${DEV_BUILD_IAC64_VERSION:-0.1.0}"

  # Deploy / IaC64 / Enable guardrail to prevent unintended deployment
  export DEV_DEPLOY_IAC64_GUARDRAIL_ENABLED="${DEV_DEPLOY_IAC64_GUARDRAIL_ENABLED:-YES}"

  # Remove / IaC64 / Enable guardrail to prevent unintended removal
  export DEV_REMOVE_IAC64_GUARDRAIL_ENABLED="${DEV_REMOVE_IAC64_GUARDRAIL_ENABLED:-YES}"
}

#
# External
#
# * External tools only. Use to declare configuration env-vars
#

# shellcheck disable=SC2154
{
  # External / OpenTofu / IAC64 runtime
  export TF_VAR_iac64__profile_name
}

#
# Module functions
#
# * Shared internal functions for module tasks
#

function dev_iac64_check_guardrail_deploy() {
  bl64_dbg_app_show_function
  bl64_dbg_app_show_vars 'DEV_DEPLOY_IAC64_GUARDRAIL_ENABLED'
  if bl64_lib_flag_is_enabled "$DEV_DEPLOY_IAC64_GUARDRAIL_ENABLED"; then
    bl64_msg_show_fatal 'Guardrail is enabled. Deployment request cancelled.'
    return $BL64_LIB_ERROR_TASK_REQUIREMENTS
  fi
}

function dev_iac64_check_guardrail_remove() {
  bl64_dbg_app_show_function
  bl64_dbg_app_show_vars 'DEV_REMOVE_IAC64_GUARDRAIL_ENABLED'
  if bl64_lib_flag_is_enabled "$DEV_REMOVE_IAC64_GUARDRAIL_ENABLED"; then
    bl64_msg_show_fatal 'Guardrail is enabled. Removal request cancelled.'
    return $BL64_LIB_ERROR_TASK_REQUIREMENTS
  fi
}
