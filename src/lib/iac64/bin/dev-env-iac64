  export DEV_LIB_IAC64_TOOL_LIB_OPENTOFU="${DEV_PATH_BIN}/dev-lib-opentofu"
  export DEV_LIB_IAC64_TOOL_LIB_PKLLANG="${DEV_PATH_BIN}/dev-lib-pkllang"
  export DEV_LIB_IAC64_TOOL_LIB_TFLINT="${DEV_PATH_BIN}/dev-lib-tflint"
