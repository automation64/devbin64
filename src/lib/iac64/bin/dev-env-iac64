  # Build / IaC64 / Source module
  export DEV_BUILD_IAC64_SHARED='shared'

  # Env / IaC64 / File names and extensions
  export DEV_ENV_IAC64_FILE_DOTENV='.iac64.env'

  # Env / IaC64 / Propagated module variables. Automatically set by dev-iac64
  export DEV_ENV_IAC64_PATH_ETC_GLOBAL="${DEV_ENV_IAC64_PATH_ETC_GLOBAL:-}"
  export DEV_ENV_IAC64_PATH_ETC_MODULE="${DEV_ENV_IAC64_PATH_ETC_MODULE:-}"
