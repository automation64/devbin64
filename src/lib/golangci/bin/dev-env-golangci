#
# Module variables
#
# * Shared internal variables for module tasks
#

# shellcheck disable=SC2154
{
  # Env / GoLangCI / Module environment definition version
  export DEV_ENV_GOLANGCI_ID='golangci'
  export DEV_ENV_GOLANGCI_VERSION='1.0.0'
  # Env / GoLangCI / Log path
  export DEV_ENV_GOLANGCI_PATH_LOGS="${DEV_PATH_LOGS}/${DEV_ENV_GOLANGCI_ID}"

  # Lib / GoLangCI / Installer
  export DEV_LIB_GOLANGCI_INSTALLER="${DEV_LIB_INSTALLER64_TARGET}/install-golangci"
  # Lib / GoLangCI / Skip installation?
  export DEV_LIB_GOLANGCI_SKIP='YES'
  # Lib / GoLangCI / Target
  export DEV_LIB_GOLANGCI_TARGET="${DEV_PATH_LIB}/${DEV_ENV_GOLANGCI_ID}"
  # Lib / GoLangCI / Config
  export DEV_LIB_GOLANGCI_CONFIG="${DEV_PATH_ROOT}/.golangci.yaml"

  # Lint / GoLangCI / Report
  export DEV_LINT_GOLANGCI_PATH_REPORT="${DEV_ENV_GOLANGCI_PATH_LOGS}/${DEV_ENV_GOLANGCI_ID}.sarif"
}

#
# Module parameters
#
# * Use .dev.env file to override values
#

# shellcheck disable=SC2154
{
  # Lint / GoLangCI / Target
  export DEV_LINT_GOLANGCI_TARGET="${DEV_LINT_GOLANGCI_TARGET:-${DEV_PATH_SRC}}"
}

#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  # Lib / GoLangCI / Command
  export DEV_LIB_GOLANGCI_BIN="${DEV_LIB_GOLANGCI_BIN:-}"
  if [[ -z "$DEV_LIB_GOLANGCI_BIN" ]]; then
    DEV_LIB_GOLANGCI_BIN="$(bl64_bsh_command_locate_user 'golangci-lint')"
    if [[ -z "$DEV_LIB_GOLANGCI_BIN" ]]; then
      DEV_LIB_GOLANGCI_BIN="${DEV_LIB_GOLANGCI_TARGET}/golangci-lint"
      if [[ ! -x "${DEV_LIB_GOLANGCI_BIN}" ]]; then
        DEV_LIB_GOLANGCI_SKIP='NO'
      fi
    else
      DEV_LIB_GOLANGCI_TARGET="$(bl64_fmt_path_get_basename "$DEV_LIB_GOLANGCI_BIN")"
    fi
  fi
}
